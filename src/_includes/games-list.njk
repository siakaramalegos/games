{% for game in games %}
  <div class="game-card" id="game-{{ game.gameId }}">
    <div class="img-container">
      <img src="{{ game.thumbnail }}" alt="">
    </div>
    <div class="game-card-text">
      <h2><a href="https://boardgamegeek.com/boardgame/{{ game.gameId }}" target="_blank" rel="noreferrer">{{ game.name }}</a></h2>
    <div class="v-align"><svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" aria-labelledby="playersTitle" width="32"><title id="playersTitle">Players</title><path fill="currentColor" d="M96 224c35.3 0 64-28.7 64-64s-28.7-64-64-64-64 28.7-64 64 28.7 64 64 64zm448 0c35.3 0 64-28.7 64-64s-28.7-64-64-64-64 28.7-64 64 28.7 64 64 64zm32 32h-64c-17.6 0-33.5 7.1-45.1 18.6 40.3 22.1 68.9 62 75.1 109.4h66c17.7 0 32-14.3 32-32v-32c0-35.3-28.7-64-64-64zm-256 0c61.9 0 112-50.1 112-112S381.9 32 320 32 208 82.1 208 144s50.1 112 112 112zm76.8 32h-8.3c-20.8 10-43.9 16-68.5 16s-47.6-6-68.5-16h-8.3C179.6 288 128 339.6 128 403.2V432c0 26.5 21.5 48 48 48h288c26.5 0 48-21.5 48-48v-28.8c0-63.6-51.6-115.2-115.2-115.2zm-223.7-13.4C161.5 263.1 145.6 256 128 256H64c-35.3 0-64 28.7-64 64v32c0 17.7 14.3 32 32 32h65.9c6.3-47.4 34.9-87.3 75.2-109.4z" class=""></path></svg> {{ game.minPlayers }} - {{ game.maxPlayers }}{% if game.bestNumPlayers %} (best with {{ game.bestNumPlayers }}){% endif %}</div>
    <div class="v-align"><svg aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" aria-labelledby="stopwatchTitle" width="32"><title id="stopwatchTitle">Playing Time</title><path fill="currentColor" d="M432 304c0 114.9-93.1 208-208 208S16 418.9 16 304c0-104 76.3-190.2 176-205.5V64h-28c-6.6 0-12-5.4-12-12V12c0-6.6 5.4-12 12-12h120c6.6 0 12 5.4 12 12v40c0 6.6-5.4 12-12 12h-28v34.5c37.5 5.8 71.7 21.6 99.7 44.6l27.5-27.5c4.7-4.7 12.3-4.7 17 0l28.3 28.3c4.7 4.7 4.7 12.3 0 17l-29.4 29.4-.6.6C419.7 223.3 432 262.2 432 304zm-176 36V188.5c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12V340c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12z" class=""></path></svg> {{ game.playingTime }} min</div>

    <details>
      <summary>Description</summary>
      <p>{{ game.description | truncate | safe }}</p>
    </details>
    {% if game.expansions %}
    <details>
      <summary>My Expansions</summary>
      <ul>
        {% for expansion in game.expansions %}
        <li>{{ expansion.name }}</li>
        {% endfor %}
      </ul>
    </details>
    {% endif %}
    </div>
  </div>
{% endfor %}
